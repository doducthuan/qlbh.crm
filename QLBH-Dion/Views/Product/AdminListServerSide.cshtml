<script>
    var showItem = ['id', 'productCategoryId', 'productBrandId', 'name', 'code', 'photo', 'createdTime', 'provinceId', 'search'];
    var dataSource = [];
    var updatingItemId = 0;
    var editObj;
    var tableUpdating = 0;
    var table;
