                            <div class="separator my-2"></div>
                            <!--end::Menu separator-->
                        </div>

                        <!--begin::Menu item-->
                        <div class="menu-item px-5">
                            <a href="" class="menu-link px-5" id="profile"> Thông tin cá nhân </a>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu separator-->
                        <div class="separator my-2"></div>
                        <!--end::Menu separator-->
                        <!--begin::Menu item-->
                        <div class="menu-item px-5">
                            <a href="@Url.Action("logout","home")" class="menu-link px-5" id="btnLogout">
